{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "types": ["node"]
  },
  "include": [
    "src",
    "next-env.d.ts",
    "pages/**/*",
    "src/**/*", //if it happend in inside src
    "components/**/*", //if it happend inside components
  ],
  "exclude": ["node_modules"],
  "extends": "./tsconfig.paths.json"
}
